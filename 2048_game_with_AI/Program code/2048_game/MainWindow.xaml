<Window x:Class="_2048_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="2048 game" Height="230" Width="230" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Background="WhiteSmoke">
        <Button Content="Single play" Click="SinglePlay_Click" FontSize="24" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" Width="200" Background="White" BorderBrush="Black" BorderThickness="2"/>
        <Button Content="AI play" Click="AIPlay_Click" FontSize="24" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" Width="200" Background="White" BorderBrush="Black" BorderThickness="2"/>
        <Button Content="High score list" Click="HighScoreList_Click" FontSize="24" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" Width="200" Background="White" BorderBrush="Black" BorderThickness="2"/>
        <Button Content="Exit" Click="Exit_Click" FontSize="24" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" Width="200" Background="Red" BorderBrush="Red"/>
    </StackPanel>
</Window>
